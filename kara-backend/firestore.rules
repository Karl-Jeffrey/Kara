rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow unrestricted read and update access to the "activities" collection
    match /activities/{activityId} {
      allow read: if true;  // Anyone can read activities
      allow update: if true;  // Anyone can update activities
      allow delete: if true;  // Anyone can delete activities
      allow create: if request.auth != null;  // Only authenticated users can create activities
    }
  }
}